{
    "name": "octoper/statamic-html-minify",
    "description": "An addon to minify HTML for Statamic v3",
    "keywords": [
        "octoper",
        "statamic-html-minify"
    ],
    "authors": [
        {
            "name": "Vaggelis Yfantis",
            "email": "me@octoper.me",
            "homepage": "https://octoper.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "statamic/cms": "^3.1",
        "voku/html-min": "^4.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.18",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^6.11",
        "pestphp/pest": "^1.11",
        "phpunit/phpunit": "^9.5",
        "spatie/pest-plugin-snapshots": "^1.1"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Octoper\\HtmlMinify\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Octoper\\HtmlMinify\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "HTML Minify",
            "description": "An addon to minify HTML for Statamic v3"
        },
        "laravel": {
            "providers": [
                "Octoper\\HtmlMinify\\HtmlMinifyServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
